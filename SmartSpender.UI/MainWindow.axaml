<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SmartSpender.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SmartSpender.UI.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SmartSpender">

    <StackPanel Spacing="10" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Create or update the Excel template file." Command="{Binding CreateOrUpdateExcelTemplateCommand}" />
        <Button Content="Processes the Excel file to RAWDATA table." Command="{Binding ProcessExcelToRawDataCommand}" />
        <Button Content="Find and add new businesses if needed." Command="{Binding FindAndAddBusinessesCommand}" />
        <Button Content="Find and add categories and map them to businesses." Command="{Binding FindAndAddCategoriesCommand}" />
    </StackPanel>
</Window>
